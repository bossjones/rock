#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

prefix := /usr
runtime := ruby21
ruby21_rootdir := /opt/rock/runtime/$(runtime)
install_rootdir := $(CURDIR)/debian/rock-runtime-ruby21-core

get-orig-source:
	uscan --noconf --rename --repack --download-current-version --verbose $(CURDIR)

override_dh_auto_configure:
	./configure \
    --prefix=$(ruby21_rootdir)$(prefix) \
    --enable-rpath \
    --enable-shared

override_dh_auto_install:
	make install DESTDIR=$(install_rootdir)
	chrpath -r $(ruby21_rootdir)$(prefix)/lib $(install_rootdir)$(ruby21_rootdir)$(prefix)/bin/ruby*
  
%:
	dh $@
