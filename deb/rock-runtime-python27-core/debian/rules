#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

prefix := /usr
runtime := python27
python27_rootdir := /opt/rock/runtime/$(runtime)
install_rootdir := $(CURDIR)/debian/rock-runtime-python27-core

get-orig-source:
	uscan --noconf --rename --repack --download-current-version --verbose $(CURDIR)

override_dh_auto_configure:
	mkdir -p $(install_rootdir)$(python27_rootdir)$(prefix)/lib
	./configure \
    --prefix=$(python27_rootdir)$(prefix) \
    --enable-ipv6 \
    --enable-unicode=ucs4 \
    --enable-shared \
    LDFLAGS="-Wl,-rpath $(install_rootdir)$(python27_rootdir)$(prefix)/lib"

override_dh_auto_install:
	make install DESTDIR=$(install_rootdir)

	sed -i 's|^#! /usr/local/bin/python|#!/usr/bin/env python|g' \
	  $(install_rootdir)$(python27_rootdir)$(prefix)/lib/python2.7/cgi.py

	sed -i "s|$(install_rootdir)||g" \
	  $(install_rootdir)$(python27_rootdir)$(prefix)/lib/python2.7/config/Makefile \
      $(install_rootdir)$(python27_rootdir)$(prefix)/lib/python2.7/_sysconfigdata.py

	chrpath -r $(python27_rootdir)$(prefix)/lib \
	  $(install_rootdir)$(python27_rootdir)$(prefix)/lib/libpython*so* \
	  $(install_rootdir)$(python27_rootdir)$(prefix)/lib/python2.7/lib-dynload/*.so \
	  $(install_rootdir)$(python27_rootdir)$(prefix)/bin/python2.7

override_dh_auto_test:

%:
	dh $@
